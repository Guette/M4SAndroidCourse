<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".InscriptionActivity" >

    <TextView
        android:id="@+id/txtinscription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="@string/inscription"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/txtprenom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txtinscription"
        android:layout_marginTop="24dp"
        android:text="@string/prenom"
        android:textAppearance="?android:attr/textAppearanceLarge" />


    <TextView
        android:id="@+id/txtnom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtprenom"
        android:layout_below="@+id/txtprenom"
        android:layout_marginTop="28dp"
        android:text="@string/nom"
        android:textAppearance="?android:attr/textAppearanceLarge" />   

    <TextView
        android:id="@+id/txtemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txtnom"
        android:layout_marginTop="20dp"
        android:text="@string/email"
        android:textAppearance="?android:attr/textAppearanceLarge" />


    <TextView
        android:id="@+id/txtlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txtemail"
        android:layout_marginTop="42dp"
        android:text="@string/log"
        android:textAppearance="?android:attr/textAppearanceLarge" />


    <TextView
        android:id="@+id/txtpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txtlogin"
        android:layout_marginTop="23dp"
        android:text="@string/pass"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/btnvalider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/txtinscription"
        android:layout_below="@+id/txtpassword"
        android:layout_marginRight="32dp"
        android:layout_marginTop="35dp"
        android:text="@string/valider" />

    <Button
        android:id="@+id/btnannuler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnvalider"
        android:layout_alignBottom="@+id/btnvalider"
        android:layout_alignLeft="@+id/txtpassword"
        android:layout_marginLeft="26dp"
        android:text="@string/annuler" />

    <EditText
        android:id="@+id/prenom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtprenom"
        android:layout_alignBottom="@+id/txtprenom"
        android:layout_alignParentRight="true"
        android:ems="10" />

    <EditText
        android:id="@+id/nom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtemail"
        android:layout_toRightOf="@+id/txtprenom"
        android:ems="10" >
    </EditText>

    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtemail"
        android:layout_alignBottom="@+id/txtemail"
        android:layout_alignRight="@+id/nom"
        android:ems="10" />
    <EditText
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtpassword"
        android:layout_alignRight="@+id/email"
        android:ems="10" />

    <EditText
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnvalider"
        android:layout_alignRight="@+id/login"
        android:ems="10"
        android:inputType="textPassword" />

</RelativeLayout>